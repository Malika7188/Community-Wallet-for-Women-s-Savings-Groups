# Stellar/Soroban Configuration
SOROBAN_NETWORK=testnet
# SOROBAN_NETWORK=mainnet

# Testnet Configuration
SOROBAN_RPC_URL=https://soroban-testnet.stellar.org
SOROBAN_NETWORK_PASSPHRASE=Test SDF Network ; September 2015

# Mainnet Configuration (uncomment when deploying to mainnet)
# SOROBAN_RPC_URL=https://soroban-rpc.mainnet.stellar.org:443
# SOROBAN_NETWORK_PASSPHRASE=Public Global Stellar Network ; September 2015

# Your Stellar account credentials
SOROBAN_PUBLIC_KEY=YOUR_PUBLIC_KEY_HERE
SOROBAN_SECRET_KEY=YOUR_SECRET_KEY_HERE

# Contract address (set after deployment)
SOROBAN_CONTRACT_ID=

# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database_name?sslmode=require

# Server configuration
PORT=3000

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-change-in-production

# Environment
ENVIRONMENT=development
# ENVIRONMENT=production
